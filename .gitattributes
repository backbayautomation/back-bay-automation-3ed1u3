# Set default behavior to automatically normalize line endings
* text=auto

# Frontend source files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Backend source files
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Configuration files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.conf text eol=lf

# Documentation files
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Shell scripts and Docker files
*.sh text eol=lf
Dockerfile text eol=lf
.dockerignore text eol=lf

# Windows-specific files
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files (no line-ending conversion)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Vector and AI model files
*.bin binary
*.onnx binary
*.pt binary
*.pth binary
*.h5 binary
*.pkl binary

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitkeep text eol=lf

# IDE and editor files
.editorconfig text eol=lf
*.code-workspace text eol=lf
.vscode/* text eol=lf

# Kubernetes and cloud config files
*.tf text eol=lf
*.tfvars text eol=lf
*.helmignore text eol=lf
Chart.yaml text eol=lf
values.yaml text eol=lf

# Ensure GitHub linguist correctly identifies languages
*.py linguist-language=Python
*.ts linguist-language=TypeScript
*.tsx linguist-language=TypeScript
*.jsx linguist-language=JavaScript
Dockerfile linguist-language=Dockerfile